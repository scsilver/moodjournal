<p id="notice"><%= notice %></p>

<h1>Listing Entries</h1>


<%= form_tag entries_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>


<div class= "col-sm-8">
  <% @entries.each do |entry| %>
        
        <div class="row">

  <div class="pageedge">
   

      <table class="table table-hover table-striped">
        <thead>
            <tr>
              <th>Title</th>
              <th>Positive</th>
              <th>Negative</th>
              <th>Intensity</th>




            <th colspan="3"></th>
          </tr>
        </thead>

    <tbody >
   
        <td><%= entry.title %></td>
        <td><%= entry.positive %></td>
        <td><%= entry.negative %></td>
        <td><%= entry.intensity %></td>
        
        <td><%= link_to 'Show', entry, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>

    
  </tbody>
</table>
 <h2><%= entry.content%></h2>

</div>

</div>
<% end %>

</div>
<div class= "col-sm-4">
  <div class="row">
  <div class="pageedge">
    <h2> Recent Entries </h2>
      <% @entries.each do |entry| %>
      <br>

       <p><%= distance_of_time_in_words(entry.created_at, Time.now)+": " +entry.content%></p>
       <%end%>
</div>

  </div>


  <div class="row">

<%= link_to 'New Entry', new_entry_path, class: "btn btn-primary" %>
  </div>
  </div>
